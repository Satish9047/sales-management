// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  orders   Order[]
}

model Product {
  id          Int          @id @default(autoincrement())
  name        String
  price       Float
  description String
  orders      Order[]
  topsellings TopSelling[]
}

model Order {
  id         Int      @id @default(autoincrement())
  quantity   Int
  order_date DateTime
  userId     Int
  productId  Int
  user       User     @relation(fields: [userId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])
}

model Report {
  id          Int      @id @default(autoincrement())
  report_date DateTime
  report_type String
}

model TopSelling {
  id        Int     @id @default(autoincrement())
  productId Int
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])

  @@map("top_selling")
}
